# =============================================================================
# Configuration Production - Sensea
# Copier vers /opt/app/.env et remplir les valeurs
# =============================================================================

# Base de données
DB_ROOT_PASS=CHANGE_ME_STRONG_ROOT_PASSWORD
DB_NAME=snoezelen_db
DB_USER=snoezelen
DB_PASS=CHANGE_ME_STRONG_DB_PASSWORD
DB_CHARSET=utf8mb4

# JWT (générer avec: openssl rand -hex 32)
JWT_SECRET=CHANGE_ME_64_CHARS_HEX
JWT_REFRESH_SECRET=CHANGE_ME_64_CHARS_HEX_DIFFERENT

# Chiffrement données sensibles (générer avec: openssl rand -hex 16)
ENCRYPTION_KEY=CHANGE_ME_32_CHARS

# Email (SMTP)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=noreply@sensea.cc
MAIL_PASS=CHANGE_ME
MAIL_FROM=noreply@sensea.cc

# URLs
APP_URL=https://suivi.sensea.cc/api
FRONTEND_URL=https://suivi.sensea.cc

# Google Calendar (iCal public)
GOOGLE_ICAL_URL=https://calendar.google.com/calendar/ical/xxx/basic.ics

# OVH SMS (optionnel)
OVH_SMS_APP_KEY=
OVH_SMS_APP_SECRET=
OVH_SMS_CONSUMER_KEY=
OVH_SMS_SERVICE_NAME=
